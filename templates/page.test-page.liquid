<style>
  #table-vendors img {
    transition: all .1s ease-out;
    border: 2px solid #000;
  }
  #table-vendors img:hover {
    transform: scale(2,2);
    box-shadow: 0 0 20px #000;
  }
</style>
<div class="container" style="margin-top: 40px; margin-bottom: 40px;">
  <div class="row">
    <div class="col-sm-12">

      <h1>Vendors </h1>
      <table id="table-vendors" class="table table-hovered">
        <thead>
          <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Filename</th>
          </tr>
        </thead>
        <tbody>
          {% for product_vendor in shop.vendors %}
            {% capture vendor_logo %}vendor-{{ product_vendor | handleize }}.png{% endcapture %}
            <tr>
              <td><img src="{{ vendor_logo | asset_url }}" alt="" width="100"></td>
              <td>{{ product_vendor }}</td>
              <td><code>vendor-{{ product_vendor | handleize }}.png</code></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <script>
        jQuery(function($){
          $('#table-vendors img').each(function(){
            var $this = $(this);
            $this.after('<div><small>' + $this.prop('naturalWidth') + '&times;' + $this.prop('naturalHeight') + '<small></div>');
          });
        })(jQuery);
      </script>

    </div>
  </div>
</div>
