<script type="text/javascript">
ga('require', 'ecommerce');
ga('ecommerce:addTransaction', {
  'id': '{{order.order_number}}',// Transaction ID. Required.
  'affiliation': 'Sons of Gotham',   // Affiliation or store name.
  'revenue': {{total_price | times: 0.01}},// Grand Total.
  'shipping': {{shipping_price | times: 0.01}},// Shipping.
  'tax': {{tax_price | times: 0.01}}// Tax.
});
{% for line_item in line_items %}
ga('ecommerce:addItem', {
  'id': '{{order.order_number}}',   // Transaction ID. Required.
  'name': '{{line_item.title}}',    // Product name. Required.
  'sku': '{{line_item.sku}}',        // SKU/code.
  'category': '{{line_item.type}}',   // Category or variation.
  'price': {{line_item.line_price | times: 0.01}},//Unit price.
  'quantity': {{line_item.quantity}}   // Quantity.
});
{% endfor %}
ga('ecommerce:send');
</script>
