{{ 'jquery.tmpl.min.js' | asset_url | script_tag }}
{{ 'jquery.products.js' | asset_url | script_tag }}

<div id="recently-viewed-products-wrapper" class="h_row_4" style="display:  none;">
  <div class="clearfix">
    <h3 class="section-header__title">Recently Viewed Products</h3>
  </div>
  <div class="carosel product_c">
    <div class="row">
      <div id="recently-viewed-products" class="owl-carousel"> 
      </div>
    </div>
  </div>
</div>


{% raw %}
<script id="recently-viewed-product-template"  type="text/x-jquery-tmpl">

<div class="main_box">
  <div class="box_1">
    {{if compare_at_price > price}}
    <div class="on-sale">Sale</div>
    {{/if}}

    {{if available == false }}
    <div class="sold-out">Sold Out</div>
    {{/if}}
    <div class="product-image">
      <a href="${url}"><img src="${Shopify.Products.resizeImage(featured_image, "medium")}" alt="${featured_image.alt}"></a>
    </div>
    <div class="overlay hidden-sm hidden-xs">
      <a href="${url}" class="popup-text quick-view-btn btn_c cart_btn_1 mgn-iframe-type" data-url="${url}" data-effect="mfp-move-from-top" data-toggle="tooltipX" data-placement="top" title="Quick View">Quick View</a>
    </div>
  </div>
  <div class="desc">
    <h5><a href="${url}">${title}</a></h5>
    <div class="price">{{if price_varies }}From{{/if}} ${Shopify.formatMoney(price_min)} {{if compare_at_price > price}}<span class="compare-price">${Shopify.formatMoney(compare_at_price)}</span>{{/if}}</div>
     
    <!-- Yotpo Star Rating -->
    <div class="yotpo bottomLine" data-product-id="${id}">
     </div>
    <!-- End of Yotpo Star Rating -->
  </div>
</div>
</script>
{% endraw %}

<script>
Shopify.Products.showRecentlyViewed( { howManyToShow: 4 } );
</script>

<style type="text/css">
  #recently-viewed-products-wrapper {
    margin-top: 50px;
    margin-bottom: 30px;
  }
</style>